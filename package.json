{
  "name": "cris-translator",
  "version": "1.1.0",
  "description": "Cris Translator - Ứng dụng dịch nhanh cho macOS hiển thị trên menu bar",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "lint": "eslint .",
    "build": "electron-builder --mac"
  },
  "author": "namcris",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.5",
    "electron-store": "^11.0.2",
    "openai": "^4.57.1"
  },
  "devDependencies": {
    "electron": "^39.1.2",
    "electron-builder": "^26.0.12",
    "eslint": "^9.12.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-n": "^17.10.1",
    "eslint-plugin-promise": "^7.1.0"
  },
  "build": {
    "appId": "com.namcris.cristranslator",
    "productName": "Cris Translator",
    "icon": "assets/logo.png",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/logo.png"
    }
  }
}
